<!-- card.ejs -->

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <link rel="stylesheet" href="/styles.css">
    <style>
        .card-details-container {
            background-color: rgba(255, 255, 255, 0.8); /* Adjust opacity as needed */
            padding: 20px;
            border-radius: 10px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        }
        .card-app-title {
            color: white;
        }

        .custom-navbar {
            background-color: rgb(0, 89, 124);
        }

        .carousel-indicators {
            display: none;
        }

        .custom-carousel-indicators {
            position: absolute;
            bottom: 10px;
            left: 50%;
            transform: translateX(-50%);
            display: flex;
        }

        .custom-carousel-indicators div {
            background-color: #fff;
            border-radius: 2px;
            height: 4px;
            width: 20px;
            margin: 0 4px;
            transition: background-color 0.3s;
        }

        .custom-carousel-indicators .active {
            background-color: #000;
        }

        .carousel-inner img {
            height: 300px;
            object-fit: cover;
        }

        .card-img-top {
            height: 400px;
            object-fit: cover;
        }
    </style>
    <title>Card Details</title>
</head>
<body>
    <nav class="navbar navbar-expand-sm custom-navbar">
        <div class="container-fluid"> <a class="navbar-brand text-light" href="/">Card Collector</a> <button
                class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#collapsibleNavbar">
                <span class="navbar-toggler-icon"></span> </button>
            <div class="collapse navbar-collapse" id="collapsibleNavbar">
                <ul class="navbar-nav me-auto">
                    <li class="nav-item"> <a class="nav-link text-light" href="/">Home</a> </li>
                    <li class="nav-item"> <a class="nav-link text-light" href="/addCard">Add new card</a> </li>
                    <li class="nav-item">
                        <div class="dropdown"> <a class="nav-link dropdown-toggle text-light" href="#" role="button"
                                data-bs-toggle="dropdown" aria-expanded="false"> Categories </a>
                            <ul class="dropdown-menu">
                                <li><a class="dropdown-item" href="/">All</a></li>
                                <li><a class="dropdown-item" href="/?category=Pok&eacute;mon">Pok√©mon</a></li>
                                <li><a class="dropdown-item" href="/?category=Anime">Anime</a></li>
                                <li><a class="dropdown-item" href="/?category=Kpop">Kpop</a></li>
                                <li><a class="dropdown-item" href="/?category=Sport">Spors</a></li>
                                <li><a class="dropdown-item" href="/?category=Other">Other</a></li>
                            </ul>
                        </div>
                    </li>
                </ul> <!-- Search form -->
                <form class="d-flex me-3" action="/search" method="GET"> <input class="form-control me-2" type="search"
                        placeholder="Search cards..." name="q" aria-label="Search"> <button
                        class="btn btn-outline-light" type="submit">Search</button> </form> <!-- Login and Register -->
                <ul class="navbar-nav">
                    <li class="nav-item me-3"> <button type="button" class="nav-link btn btn-light-blue"
                            onclick="window.location.href='/login';"> Login </button> </li>
                    <li class="nav-item"> <button type="button" class="nav-link btn btn-light-blue"
                            onclick="window.location.href='/register';"> Register </button> </li>
                </ul>
            </div>
        </div>
    </nav>
    
    <div class="container">
        <br>
        <div class="card-app-title text-center"><h2>Card Details</h2></div>
        <br>
        <% if (card) { %>
            <div class="card-details-container">
                <p><b>Card Name:</b><br>
                  <%= card.cardName %></p>
                <p><b>Card Image:</b><br>
                  <img src="/images/<%= card.image %>" width="20%"></p>
                <p><b>Card Quantity:</b><br>
                  <%= card.quantity %></p>
                <p><b>Card Edition:</b><br>
                    <%= card.edition %></p>
                <p><b>Value:</b><br>
                  <% if (card.value !== null && typeof card.value !== 'undefined' && !isNaN(Number(card.value))) { %>
                    $<%= Number(card.value).toFixed(2) %>
                  <% } else { %>
                    N/A
                  <% } %>
                </p>
                <p><b>Card Category:</b><br>
                    <%= card.category %></p>
            </div>
        <% } else { %>
            <p>No card found.</p>
        <% } %>
    </div>

</body>
</html>
